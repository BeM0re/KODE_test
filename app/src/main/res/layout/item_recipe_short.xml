<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_normal_16"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_list_item_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/im_splash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_list_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal_16"
        app:layout_constraintStart_toEndOf="@id/iv_list_item_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Рецепт" />

    <TextView
        android:id="@+id/tv_list_item_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:textSize="@dimen/font_small_12"
        android:layout_marginStart="@dimen/spacing_normal_16"
        app:layout_constraintStart_toEndOf="@id/iv_list_item_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_list_item_title"
        tools:text="@string/lorem_ipsum" />

</androidx.constraintlayout.widget.ConstraintLayout>